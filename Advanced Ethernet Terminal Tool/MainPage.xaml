                <Button Grid.Column="0" Content="TCP Server" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1,1,1,1"/>
                <Button Grid.Column="1" Content="Settings" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1,1,1,1"/>












